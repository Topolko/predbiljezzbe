@model TopolkoSeminar.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}



<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    
    
    <h4>Promjenite postavke</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Lozinka:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Promjenite lozinku", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Odaberi", "SetPassword")
            }
            ]
        </dd>
      
        <dt>Osobni podaci:</dt>
        <dd>
            @Html.ActionLink("Uredi profil", "MojProfil", "Profil")
        </dd>


    </dl>
</div>
